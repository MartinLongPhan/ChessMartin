{
    "manifest_version": 3,
    "name": "MartinChessVN",
    "version": "1.0",
    "description": "UI Enhancer for Chess.com - Larger Clock, Focus Mode & Fullscreen.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://www.chess.com/*"
    ],
    "action": {
        "default_popup": "popup/popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/chess.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.chess.com/*"
            ],
            "js": [
                "assets/chess.min.js",
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}